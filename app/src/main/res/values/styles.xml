<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_amber</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_amber</item>
        <item name="colorAccent">@color/color_accent_blue</item>
    </style>


    <!--Translucent application theme.-->
    <style name="AppThemeTranslucentStatus" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_amber</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_amber</item>
        <item name="colorAccent">@color/color_accent_blue</item>
        <item name="android:windowBackground">@color/color_primary_dark_amber</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_amber</item>
        <item name="colorPrimaryDark">@color/color_primary_amber</item>
        <item name="colorAccent">@color/color_accent_blue</item>
    </style>


    <!-- navigationDrawer items -->
    <style name="NavDrawerItemTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <!-- collapsingAppBar -->
    <style name="ExpandedTitleTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#0FFF</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- collapsingAppBar -->
    <style name="CollapsedTitleTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- spotsDialog -->
    <style name="SignInDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="DialogTitleAppearance">@style/DialogTextAppearance</item>
        <item name="DialogTitleText">@string/signing_in</item>
        <item name="DialogSpotColor">@color/color_accent_blue</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <!-- spotsDialog -->
    <style name="BuildSignInDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="DialogTitleAppearance">@style/DialogTextAppearance</item>
        <item name="DialogTitleText">@string/please_wait</item>
        <item name="DialogSpotColor">@color/color_accent_blue</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <!-- dialogText -->
    <style name="DialogTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <!--<item name="app:font"></item>-->
        <!--<item name="android:typeface">@assets/fonts/ubuntu-regular.ttf</item>-->
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
