<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_amber</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_amber</item>
        <item name="colorAccent">@color/color_accent_blue</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppThemeTranslucentStatus" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_amber</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_amber</item>
        <item name="colorAccent">@color/color_accent_blue</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <!-- navigationDrawer items -->
    <style name="NavDrawerItemTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <!-- collapsingAppBar -->
    <style name="ExpandedTitleTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#0FFF</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- collapsingAppBar -->
    <style name="CollapsedTitleTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
