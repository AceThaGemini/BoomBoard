<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="224dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_primary_amber"
        android:scaleType="centerCrop"
        android:src="@drawable/image_material_circles" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardDp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"

        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imageNavDp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle"
            android:tint="@color/color_white" />
    </android.support.v7.widget.CardView>

    <creationsofali.boomboard.appfonts.HindTextView
        android:id="@+id/textNavSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/cardDp"
        android:layout_below="@id/cardDp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="#4FFF"
        android:paddingBottom="4dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="4dp"
        android:text="@string/sign_in"
        android:textAllCaps="true"
        android:textColor="@color/selector_color_white_blue"
        android:textSize="14sp" />

</RelativeLayout>
