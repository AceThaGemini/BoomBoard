<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardNote"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="2dp"

    app:cardBackgroundColor="#FFFF"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <!--<FrameLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_blue"
            android:padding="8dp">

            <creationsofali.boomboard.appfonts.HindTextView
                android:id="@+id/textSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:text="Note Subject Will Show Here"
                android:textColor="@color/color_grey_900"
                android:textSize="15sp" />

            <creationsofali.boomboard.appfonts.HindTextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textSubject"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="1dp"
                android:maxLines="2"
                android:text="A part of a note message will show here. Just the part of it though, click to read the whole thang..."
                android:textColor="@color/color_secondary_text"
                android:textSize="14sp" />

            <creationsofali.boomboard.appfonts.HindTextView
                android:id="@+id/textDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="6dp"
                android:text="Jun 05 - 23:00"
                android:textColor="@color/color_secondary_text"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iconClip"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="8dp"
                android:rotation="90"
                android:src="@drawable/ic_attach_file"
                android:tint="@color/color_accent_blue" />
        </RelativeLayout>
    </LinearLayout>


    <!--</FrameLayout>-->
</android.support.v7.widget.CardView>
