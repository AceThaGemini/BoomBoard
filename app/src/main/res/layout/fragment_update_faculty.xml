<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <creationsofali.boomboard.appfonts.HindTextView
        android:id="@+id/textChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="128dp"
        android:text="@string/update_faculty_details"
        android:textColor="@color/color_grey_700"
        android:textSize="16sp" />

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinnerFaculty"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"

        app:ms_arrowColor="@color/color_accent_blue"
        app:ms_arrowSize="12dp"
        app:ms_baseColor="@color/color_accent_blue"
        app:ms_enableFloatingLabel="true"
        app:ms_floatingLabelColor="@color/color_accent_blue"
        app:ms_floatingLabelText="@string/faculty"
        app:ms_highlightColor="@color/color_primary_amber"
        app:ms_hint="@string/choose_faculty"
        app:ms_hintColor="@color/color_secondary_text"
        app:ms_multiline="false"
        app:ms_thickness="1dp" />

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinnerYear"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"

        app:ms_arrowColor="@color/color_accent_blue"
        app:ms_arrowSize="12dp"
        app:ms_baseColor="@color/color_accent_blue"
        app:ms_enableFloatingLabel="true"
        app:ms_floatingLabelColor="@color/color_accent_blue"
        app:ms_floatingLabelText="@string/year_of_study"
        app:ms_highlightColor="@color/color_primary_amber"
        app:ms_hint="@string/choose_year"
        app:ms_hintColor="@color/color_secondary_text"
        app:ms_multiline="false"
        app:ms_thickness="1dp" />

</LinearLayout>